.admin_login
  = form_tag admin_session_path do
    .row
      .columns.large-4.small-centered
        = label_tag :username
        = text_field_tag :username, params[:username]
    .row
      .columns.large-4.small-centered
        = label_tag :password
        = password_field_tag :password, params[:username]
    .row
      .columns.large-4.small-centered
        = submit_tag 'Login', class: 'button'