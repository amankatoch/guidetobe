.signup_container
  %br
  %br
  %p You can go back and edit your business listing #{link_to 'here', edit_supplier_path(current_owner.supplier), style: 'color: #E62B8A'}
  
  %h1 Edit your profile
  %p
    Boxes marked
    %span.green_required *
    must be filled in

  .bride_signup_form
    = simple_form_for @owner, url: owner_update_profile_path(current_owner), method: :put do |f|
      .field
        = f.input :first_name, input_html: { class: 'gtb_text_field' }
      .field
        = f.input :last_name, input_html: { class: 'gtb_text_field' }
      .field
        = f.input :username, input_html: { class: 'gtb_text_field' }
      .field
        = f.input :email, input_html: { class: 'gtb_text_field' }
      .field
        = f.input :password, input_html: { class: 'gtb_text_field' }
      .field
        = f.input :password_confirmation, input_html: { class: 'gtb_text_field' }
      .actions
      = f.submit 'Update profile', class: 'signup_button'